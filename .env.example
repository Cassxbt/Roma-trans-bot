# ============================================
# Translation Providers (Multi-provider with fallback)
# ============================================
# DeepL API (Primary - Best quality, 500k chars/month free)
# Get token: https://www.deepl.com/pro-api
DEEPL_API_KEY=

# Azure Translator (Fallback - 2M chars/month free)
# Get token: https://azure.microsoft.com/
AZURE_TRANSLATOR_KEY=
AZURE_TRANSLATOR_REGION=
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# LibreTranslate (Emergency fallback - FREE, self-hosted or public)
LIBRETRANSLATE_ENDPOINT=https://libretranslate.com

# ============================================
# Database - FREE (SQLite)
# ============================================
DATABASE_URL=sqlite:///data/translations.db

# ============================================
# Cache - FREE (In-memory)
# ============================================
CACHE_ENABLED=true
CACHE_TYPE=memory
CACHE_DIR=data/cache
CACHE_TTL=86400

# ============================================
# File Storage - FREE (Local filesystem)
# ============================================
UPLOAD_DIR=data/uploads
MAX_UPLOAD_SIZE=10485760

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=5000
API_WORKERS=2

# ============================================
# Voice Translation (Hugging Face Whisper)
# ============================================
# Get token: https://huggingface.co/settings/tokens
# Required for voice transcription feature
HF_TOKEN=

# ============================================
# Bot Configuration
# ============================================
# Discord Bot Token - Get from https://discord.com/developers
DISCORD_BOT_TOKEN=

# Telegram Bot Token - Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# ============================================
# Feature Flags
# ============================================
ENABLE_TRANSLATION_MEMORY=true
ENABLE_QUALITY_CHECK=true
ENABLE_PARALLEL_TRANSLATION=true
ENABLE_FILE_UPLOAD=true

# ============================================
# Application Settings
# ============================================
LOG_LEVEL=INFO
MAX_TEXT_LENGTH=10000
MAX_TARGET_LANGUAGES=10
MAX_CONCURRENT_TRANSLATIONS=5
